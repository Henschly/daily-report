{
  "name": "daily-report-backend",
  "version": "1.0.0",
  "description": "Staff Daily Reporting & Performance Management System - Backend",
  "main": "dist/index.js",
  "prisma": {
    "schema": "prisma/schema.prisma"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && npm run db:generate",
    "start": "node dist/index.js",
